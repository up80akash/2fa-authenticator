{% extends "base.html" %}
{% block content %}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card p-4">
            <h3 class="text-center">Enter OTP</h3>

            <form method="POST">
                <input type="text" name="otp" class="form-control mb-3"
                       placeholder="6-digit code" required>

                <button class="btn btn-primary w-100">
                    Verify
                </button>
            </form>
        </div>
    </div>
</div>

{% endblock %}

